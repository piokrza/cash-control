{
  "$schema": "http://json-schema.org/schema",
  "cli": "nx",
  "$id": "generate-core-library",
  "type": "object",
  "description": "Generate a new library under 'core'.",
  "properties": {
    "name": {
      "type": "string",
      "$default": {
        "$source": "argv",
        "index": 0
      }
    },
    "directory": {
      "type": "string",
      "$default": {
        "$source": "argv",
        "index": 1
      }
    }
  },
  "required": ["name"]
}
